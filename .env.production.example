# ============================================================================
# ARKA-ED Production Environment Variables
# ============================================================================
# Copy this file to .env.production.local and fill in the values
# NEVER commit .env.production.local to version control
# ============================================================================

# ============================================================================
# Application
# ============================================================================

# The public URL of your deployed application
NEXT_PUBLIC_APP_URL=https://arka-ed.com

# Node environment (always "production" for production)
NODE_ENV=production

# ============================================================================
# Supabase Configuration
# ============================================================================

# Your Supabase project URL
# Found in: Supabase Dashboard > Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anonymous/public key
# Found in: Supabase Dashboard > Settings > API > Project API keys > anon public
# This key is safe to expose in the browser
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Your Supabase service role key (KEEP SECRET!)
# Found in: Supabase Dashboard > Settings > API > Project API keys > service_role
# WARNING: This key has full database access - never expose to client
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# Authentication
# ============================================================================

# JWT secret for session tokens (generate a random 32+ character string)
# Use: openssl rand -base64 32
JWT_SECRET=your-jwt-secret

# OAuth providers (optional)
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# ============================================================================
# Analytics & Monitoring
# ============================================================================

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Site Verification (optional)
GOOGLE_SITE_VERIFICATION=your-verification-code

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# Email (optional)
# ============================================================================

# For transactional emails (Resend, SendGrid, etc.)
EMAIL_FROM=noreply@arka-ed.com
RESEND_API_KEY=your-resend-api-key

# ============================================================================
# Feature Flags (optional)
# ============================================================================

# Enable/disable features
NEXT_PUBLIC_FEATURE_ASSESSMENTS=true
NEXT_PUBLIC_FEATURE_ACHIEVEMENTS=true
NEXT_PUBLIC_FEATURE_LEADERBOARD=false

# ============================================================================
# Rate Limiting (optional)
# ============================================================================

# Upstash Redis for rate limiting
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================================================
# Security
# ============================================================================

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://arka-ed.com,https://www.arka-ed.com
